{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "program": "${file}",
            "cwd": "${workspaceRoot}",
            "env": {
                "SPARK_TOKEN": "PASTE YOUR BOT ACCESS TOKEN HERE",
                "SPARK_BOT_URL": "PASTE YOUR NGROK URL HERE",
                "SPARK_SMS_USER": "PASTE YOUR SPARK SMS USER EMAIL HERE",
                "TROPO_TOKEN": "PASTE YOUR TROPO SCRIPT TOKEN HERE"
            },
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }
    ]
}