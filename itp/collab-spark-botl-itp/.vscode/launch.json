{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "ChatOps",
            "type": "python",
            "request": "launch",
            "stopOnEntry": "false",
            "pythonPath": "${config.python.pythonPath}",
            "program": "${file}",
            "cwd": "${workspaceRoot}",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ],
            "args": [],
            "env": {
                "SPARK_ACCESS_TOKEN" : "PASTE YOUR BOT ACCESS TOKEN HERE"
            }
        }
    ]
}
